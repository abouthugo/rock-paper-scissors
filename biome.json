{
    "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
    "files": {
        "ignore": ["**/*.svg"]
    },
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "include": ["server", "src"],
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineEnding": "lf",
        "lineWidth": 80
    }
}
